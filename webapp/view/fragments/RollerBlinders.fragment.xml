<core:FragmentDefinition xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core">
    <Toolbar>
        <core:Icon src="sap-icon://resize-vertical"/>
        <Title level="H2" text="Lights" />
    </Toolbar>
    <FlexBox alignItems="Start" justifyContent="Start">
        <items>
            <!--  -->
        <GenericTile id="idLeftWindowRoller" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Left Window" press="onTileClickWindow">
                <TileContent footer="Last seen: Error" class ="smallerTileContent">
                    <NumericContent value="15%" />
                </TileContent>
            </GenericTile>
            <!--  -->
            <GenericTile id="idMiddleWindowRoller" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Middle Window" press="onTileClickWindow">
                <TileContent footer="Last seen: Error" class ="smallerTileContent">
                    <NumericContent value="0%" />
                </TileContent>
            </GenericTile>
            <!--  -->
            <GenericTile id="idRightWindowRoller" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Right Window" press="onTileClickWindow">
                <TileContent footer="Last seen: Error" class ="smallerTileContent">
                    <NumericContent value="0%" />
                </TileContent>
            </GenericTile>
            <!--  -->
        </items>
    </FlexBox>
</core:FragmentDefinition>