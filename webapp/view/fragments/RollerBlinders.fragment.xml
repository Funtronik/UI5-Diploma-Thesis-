<core:FragmentDefinition xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core">
    <Toolbar>
        <core:Icon src="sap-icon://resize-vertical"/>
        <Title level="H2" text="Lights" />
    </Toolbar>
    <FlexBox alignItems="Start" justifyContent="Start">
        <items>
            <!--  -->
            <GenericTile id="idLeftWindowRoller" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Left Window" press="onTileClick" frameType="TwoByOne">
                <TileContent footer="Last seen: Error" class ="smallerTileContent" width="80%">
                    <Slider min="0" max="100" enableTickmarks="true" class="sapUiSmallMarginBottom" width="100%">
                        <ResponsiveScale tickmarksBetweenLabels="20"/>
                    </Slider>
                </TileContent>
            </GenericTile>
            <!--  -->
            <GenericTile id="idMiddleWindowRoller" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Middle Window" press="onTileClick" frameType="TwoByOne">
                <TileContent footer="Last seen: Error" class ="smallerTileContent" width="20%">
                    <NumericContent value="30%" />
                </TileContent>
                <TileContent class ="smallerTileContent">
                    <Button text="dupa"/>
                </TileContent>
            </GenericTile>
            <!--  -->
            <GenericTile id="idRightWindowRoller" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Right Window" press="onTileClickRightWindow">
                <TileContent footer="Last seen: Error" class ="smallerTileContent" width="20%">
                    <NumericContent value="12%" />
                </TileContent>
            </GenericTile>
            <!--  -->
        </items>
    </FlexBox>
</core:FragmentDefinition>