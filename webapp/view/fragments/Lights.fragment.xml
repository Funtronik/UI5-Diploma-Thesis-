<core:FragmentDefinition xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core">

    <Toolbar>
        <core:Icon src="sap-icon://lightbulb"/>
        <Title level="H2" text="Lights" />
    </Toolbar>
    <FlexBox alignItems="Start" justifyContent="Start">
        <items>
            <GenericTile id="idLivingroomTile" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Livingroom" press="onTileClick">
                <TileContent footer="Last seen: Error" class ="smallerTileContent">
                    <Switch state="false" change="onTileSwitchLamp" id="idLivingroomSwitch">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Switch>
                </TileContent>
            </GenericTile>
            <GenericTile id="idBedroomTile" class="sapUiTinyMarginBegin sapUiTinyMarginTop " header="Bedroom" press="onTileClickRightWindow">
                <TileContent footer="Last seen: Error">
                    <Switch state="false" change="onTileSwitchLamp" id="idBedroomSwitch">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Switch>
                </TileContent>
            </GenericTile>
        </items>
    </FlexBox>
</core:FragmentDefinition>