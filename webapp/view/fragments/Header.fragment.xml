<core:FragmentDefinition xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:chart="sap.suite.ui.microchart">
    <FlexBox alignItems="Center" height="6.5rem" justifyContent="SpaceBetween">
        <items>
            <!--  -->
            <Panel class="roundedControl" backgroundDesign="Solid" height="50%">
                <FlexBox alignItems="Center" width="100%" height="50%">
                    <items>
                        <chart:HarveyBallMicroChart id="idOutsideTempHeaderChart" size="M" total="100" totalScale="째C" showTotal="false" showFractions="true" press="press">
                            <chart:items>
                                <chart:HarveyBallMicroChartItem fraction="0" color="Critical" fractionScale="째C"/>
                            </chart:items>
                        </chart:HarveyBallMicroChart>
                        <Label text="Outside Temp." />
                    </items>
                </FlexBox>
            </Panel>
            <!--  -->
            <Panel class="roundedControl" backgroundDesign="Solid">
                <FlexBox alignItems="Center" width="100%">
                    <items>
                        <chart:HarveyBallMicroChart id="idInsideTempHeaderChart" size="M" total="100" totalScale="째C" showTotal="false" showFractions="true" press="press">
                            <chart:items>
                                <chart:HarveyBallMicroChartItem fraction="0" color="Good" fractionScale="째C"/>
                            </chart:items>
                        </chart:HarveyBallMicroChart>
                        <Label text="Inside Temp." class="sapUiContentPadding"/>
                    </items>
                </FlexBox>
            </Panel>
            <!--  -->
            <Panel class="roundedControl" backgroundDesign="Solid">
                <FlexBox alignItems="Center" justifyContent="Center">
                    <items>
                        <Label text="PM2.5" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
                        <ProgressIndicator percentValue="130" displayValue="130%" showValue="true" state="Error" width="30px"/>
                        <Label/>
                        <Label text="PM10" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
                        <ProgressIndicator percentValue="30" displayValue="30%" showValue="true" state="Success" width="30px"/>
                    </items>
                </FlexBox>
            </Panel>
            <!--  -->
            <Panel class="roundedControl" backgroundDesign="Solid" width="200px">
                <FlexBox class="sapUiContentPadding" direction="Column" alignItems="Center" width="100%">
                    <items>
                        <Label id="idHeaderHour" text = "00:00" class="clockFontSize" />
                        <Label id="idHeaderDate" text = "" />
                    </items>
                </FlexBox>
            </Panel>
            <!--  -->
        </items>
    </FlexBox>
</core:FragmentDefinition>