<mvc:View controllerName="app.webapp.controller.Launchpad" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" class="myBackgroundStyle">
    <App id="Launchpad">
        <Page title="{i18n>LaunchpadTitle}">
            <content>
                <Panel>
                    <headerToolbar>
                        <Toolbar>
                            <Title level="H2" text="Lights" />
                        </Toolbar>
                    </headerToolbar>
                    <FlexBox alignItems="Start" justifyContent="Start">
                        <items>
                            <StandardTile id="idLivingroomTile" title="" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" press="reloadRepo" infoStatus="Warning" info="info" icon="sap-icon://lightbulb"/>
                        </items>
                    </FlexBox>
                </Panel>
                <Panel>
                    <List id="list" headerText="Products" items="{path: '/temperatures'}">
                        <StandardListItem title="{id}" description="{temp}"/>
                    </List>
                </Panel>
            </content>
        </Page>
    </App>
</mvc:View>