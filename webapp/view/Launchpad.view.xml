<mvc:View controllerName="app.webapp.controller.Launchpad" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" class="myBackgroundStyle">
    <App id="Launchpad">
        <Page title="{i18n>LaunchpadTitle}">
            <content>
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Livingroom Light" press="onLivinfroomLight">
                    <TileContent >
                        <NumericContent value="ON" numberState="{=	${LivingroomLight>State} == 'OFF' ? 'Error' : 'Success' }" icon="sap-icon://lightbulb"/>
                    </TileContent>
                </GenericTile>

                <List id="list" headerText="Products" items="{path: '/temperatures'}">
                    <StandardListItem title="{id}"/>
                </List>
            </content>
        </Page>
    </App>
</mvc:View>