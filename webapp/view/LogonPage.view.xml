<mvc:View controllerName="app.webapp.controller.LogonPage" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <App>
        <pages>
            <Page title="Login" class="sapUiContentPadding">
                <content>
                    <FlexBox alignItems="Center" justifyContent="Center" height="100%" width="100%">
                        <items>
                            <VBox ustifyContent="Center">
                                <FlexBox alignItems="Center" justifyContent="Center" height="70px" width="100%">
                                    <items>
                                        <VBox>
                                            <Label text="Login:"/>
                                            <Input id="idLoginInput" class="sapUiSmallMarginBottom" type="Text" placeholder="Enter login..."/>
                                        </VBox>
                                    </items>
                                </FlexBox>
                                <FlexBox alignItems="Center" justifyContent="Center" height="70px" width="100%">
                                    <items>
                                        <VBox>
                                            <Label text="Password:"/>
                                            <Input id="idPasswordInput" class="sapUiSmallMarginBottom" type="Text" placeholder="Enter password..."/>
                                        </VBox>
                                    </items>
                                </FlexBox>
                                <FlexBox alignItems="Center" justifyContent="Center" height="50px" width="100%">
                                    <items>
                                        <Button text="Login" press="onLogin" type="Accept"/>
                                    </items>
                                </FlexBox>
                            </VBox>
                        </items>
                    </FlexBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>