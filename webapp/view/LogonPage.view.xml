<mvc:View controllerName="app.webapp.controller.LogonPage" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <App>
        <pages>
            <Page title="Login" class="sapUiContentPadding">
                <content>
                    <FlexBox alignItems="Center" justifyContent="Center" height="100%" width="100%">
                        <items>
                            <VBox ustifyContent="Center">
                                <FlexBox alignItems="Center" justifyContent="Center" height="70px" width="100%">
                                    <items>
                                        <VBox>
                                            <Label text="Login:"/>
                                            <Input id="idLoginInput" class="input sapUiSmallMarginBottom" type="Text" placeholder="Enter login..."/>
                                        </VBox>
                                    </items>
                                </FlexBox>
                                <FlexBox alignItems="Center" justifyContent="Center" height="70px" width="100%">
                                    <items>
                                        <VBox>
                                            <Label text="Password:"/>
                                            <Input id="idPasswordInput" class="input sapUiSmallMarginBottom" type="Password" placeholder="Enter password..." />
                                        </VBox>
                                    </items>
                                </FlexBox>
                                <FlexBox id="idFlexBoxLoginButton" alignItems="Center" justifyContent="Center" height="50px" width="100%">
                                    <items>
                                        <Button class="button" text="Login" press="onLoginAuth" type="Accept" icon="sap-icon://visits" iconFirst="true"/>
                                    </items>
                                </FlexBox>
                            </VBox>
                        </items>
                    </FlexBox>
                </content>
                <footer>
                    <Toolbar height="20px">
                        <ToolbarSpacer/>
                        <Text text="Designed by Mikołaj Jakś" class="fontSizeSmall" />
                    </Toolbar>
                </footer>
            </Page>
        </pages>
    </App>
</mvc:View>